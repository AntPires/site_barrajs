@import 'variables'
	
//taks--**--
.talks
		background blue
		text-align center
		space(0,10px)
		ul li
			display inline-table
			margin 10px 20px
			.box
				display: table;
				background: white;
				text-align left
				space(0 auto,10px)
				h3
					space(0,0)
					color blue
				span
					font(14px,yellow,normal)

//horarios--**--
.horarios
	size(100%,auto)
	text-align left
	//thead
	thead
		font(21px,blue,bold)
		.th1
			size(15%,auto)
		.th2
			size(25%,auto)
		.th3
			size(60%,auto)
	tbody
		tr:nth-child(even)
			background	white
		tr:nth-child(odd) 
			background light-gray

		td
			padding 15px 25px
			img
				size(45px,auto)
				border-radius: 20px;
				position absolute
			.desc
				float right

//maps--**--
.maps
	.descMaps
		background: rgba(0,0,0,0.8);
		size(100%,auto)
		color: white;
		position: absolute;
		max-width: 700px;
		text-align: center;
		right: 0;
	iframe
		size(100%,400px)

//sponsor/organizers--*--
.sponsors,.organizers
	center()
	ul li
		display inline-table
		text-decoration none
		margin 0px 20px

.organizers
	p
		space(0,0)
		background none
		
	img
		size(160px,auto)
			